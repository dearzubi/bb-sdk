{
  "name": "bb-sdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "lerna clean",
    "unbuild": "lerna run unbuild",
    "build": "lerna run build --stream",
    "build:with:test": "lerna run build:with:test --stream",
    "test": "lerna run test --stream",
    "test:ci": "FORCE_COLOR=1 lerna run test:ci --stream",
    "format": "lerna run format",
    "postinstall": "",
    "prettier": "lerna run prettier",
    "diff": "lerna diff",
    "new-version": "lerna version patch --no-git-tag-version --no-push --conventional-commits --yes",
    "lint": "eslint -c .eslintrc.js 'packages/*/src/**/*.{ts,tsx}'",
    "lint:fix": "eslint -c .eslintrc.js 'packages/*/src/**/*.{ts,tsx}' --fix"
  },
  "author": "Zubair Khalid <zubairkhalidce@gmail.com>",
  "license": "ISC",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lerna": "^7.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "./packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "./packages/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
